<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_additem_add"
        style="@style/additem"
        android:layout_gravity="center"
        android:src="@drawable/add" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_additem_addarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/shape_solid_white"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_additem_txt"
            style="@style/additem"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/txt" />

        <ImageView
            android:id="@+id/iv_additem_img"
            style="@style/additem"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/img" />

        <ImageView
            android:id="@+id/iv_additem_video"
            style="@style/additem"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/video" />

        <ImageView
            android:id="@+id/iv_additem_insert"
            style="@style/additem"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/insert" />
    </LinearLayout>
</LinearLayout>