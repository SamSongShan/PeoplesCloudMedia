<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBg"
    android:orientation="vertical"
    tools:context="com.example.a11355.peoplescloudmedia.activity.SettingActivity">

    <include layout="@layout/toolbar_right_text" />


    <TextView
        android:id="@+id/tv_personalData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorWhite"
        android:drawableRight="@drawable/back_right"
        android:padding="12dp"
        android:text="个人资料"
        android:textColor="@color/colorBlack" />

    <LinearLayout
        android:id="@+id/ll_clearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:drawableRight="@drawable/back_right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="清除缓存"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_clearCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/back_right"
            android:gravity="right"
            android:padding="12dp"
            android:textColor="@color/colorGray"
            tools:text="201k" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_update"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="检查更新"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/back_right"
            android:gravity="right"
            android:padding="12dp"
            android:textColor="@color/colorGray"
            tools:text="v.1.0.0" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/colorWhite"
        android:drawableRight="@drawable/back_right"
        android:gravity="center"
        android:padding="12dp"
        android:text="退出登录"
        android:textColor="@color/colorLightRed"
        android:textSize="16sp" />
</LinearLayout>
