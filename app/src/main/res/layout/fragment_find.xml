<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBg"
    android:orientation="vertical"
    tools:context="com.example.a11355.peoplescloudmedia.fragement.FindFragment">

    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <com.example.a11355.peoplescloudmedia.custom.AutoScrollViewPager
            android:id="@+id/vp_homeAd"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <com.example.a11355.peoplescloudmedia.custom.NavView
            android:id="@+id/nv_homeAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            app:checkedImg="@drawable/nv_home_checked"
            app:padding="10"
            app:uncheckedImg="@drawable/nv_home_normal" />
        <TextView

            android:id="@+id/tv_search_bg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_solid_gray_for_search_90_alph"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_search"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/search_w"
            android:drawablePadding="5dp"
            android:text="搜索" />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:tabIndicatorColor="@color/colorAccentAlphstart"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorAccentAlphstart">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_find"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
