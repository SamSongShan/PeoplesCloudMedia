<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBg"
    android:orientation="vertical"
    tools:context="com.example.a11355.peoplescloudmedia.activity.UpdateCardCompanyInfoActivity">

    <include layout="@layout/toolbar_right_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tv_companyName"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:hint="输入公司名称" />

            <EditText
                android:id="@+id/tv_companyNet"

                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:hint="输入公司网址" />

            <LinearLayout
                android:id="@+id/ll_addr"
                android:layout_width="match_parent"

                android:background="@color/white"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="公司地址"
                    android:textColor="@color/colorDeepBlack" />


                <TextView
                    android:id="@+id/tv_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/back_right"
                    android:text="请选择" />

            </LinearLayout>
            <EditText
                android:id="@+id/et_addr"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:hint="输入详细地址"
                android:lines="3" />

            <WebView
                android:id="@+id/wv_h5"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="1dp"
                android:background="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
